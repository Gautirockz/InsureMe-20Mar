
pipeline {
  agent any  
  stages {
    stage('CheckOut') {
      steps {
        echo 'Checkout the source code from GitHub'
        git branch: 'main', url: 'https://github.com/Gautirockz/InsureMe-20Mar.git'
            }
    }
    
    stage('Package the Application') {
      steps {
        echo " Packaing the Application"
        sh 'mvn clean package'
            }
    }
      
    stage('Docker Image Creation') {
      steps {
        sh 'docker build -t saigowtham2605/insureme:1.0 .'
            }
    }
stage('Docker Login') {
  steps {
    withCredentials([
      usernamePassword(
        credentialsId: 'dockercreds',      
        passwordVariable: 'DOCKER_PASS',
        usernameVariable: 'DOCKER_USER'
      )
    ]) {
      sh '''
        echo " Logging in to Docker Hub..."
        echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin
      '''
    }
  }
}

    stage('Push Image to DockerHub') {
      steps {
        sh 'docker push saigowtham2605/insureme:1.0'
            }
    }
    stage('Deploy Application using Ansible') {
      steps {
        
ansiblePlaybook become: true, credentialsId: 'ansiblecred1', disableHostKeyChecking: true, installation: 'ansible', inventory: '/etc/ansible/hosts', playbook: 'deploy.yml', vaultTmpPath: ''
            }
    }

  }
}

